##---------- Rofi Launcher & Menus ----------##

# Rofi Themes Menu
ctrl + alt + t
	sh ~/.config/bspwm/rofi/bin/themes

# Rofi Menus/Applets
super + {w,n,x,r,s}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot,screenshot}
super + shift + w
	sh ~/.config/bspwm/rofi/bin/windows
# Rofi App Launcher
super + shift + d
	sh ~/.config/bspwm/rofi/bin/launcher

super + d
    rofi -font "hack 9" -show drun -icon-theme "parrot-common" -show-icons

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + c
	bspc node -c
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction

super + {_,shift + }{Left,Down,Up,Right}
       bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# move a floating window
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# ---------------------------------------------
# CUSTOM
# ---------------------------------------------

# Google-Chrome

super + shift + n
	google-chrome

# terminal emulator
super + Return
	gnome-terminal
super + shift + t
  gnome-terminal --full-screen

# Gestor de archivos
super + shift + a
  thunar

# Visual Studio Code
super + shift + c
  code

# Github
super + shift + g
  github